datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  tracks    Track[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Track {
  artists   Artist[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Artist {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  track     Track?   @relation(fields: [trackId], references: [id])
  trackId   String?
  updatedAt DateTime @updatedAt
}
